<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        x:Class="JavaScriptPlayground.MainWindow"
        Width="1200"
        Height="800"
        Title="JavaScript.Avalonia Playground">
  <Grid RowDefinitions="Auto,*">
    <Border Grid.Row="0" Background="#f3f3f3" Padding="12">
      <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
        <TextBlock Text="Preset:" VerticalAlignment="Center" />
        <ComboBox x:Name="PresetCombo" Width="240">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="Apply Preset" Click="OnApplyPresetClick" />
        <Button Content="Reload XAML" Click="OnReloadXamlClick" />
        <Button Content="Run Script" Click="OnRunScriptClick" />
        <CheckBox x:Name="AutoRunCheckBox" Content="Auto run script" IsChecked="True" VerticalAlignment="Center" />
        <TextBlock x:Name="StatusText" Margin="16,0,0,0" VerticalAlignment="Center" TextWrapping="Wrap" />
      </StackPanel>
    </Border>

    <Grid Grid.Row="1" ColumnDefinitions="*,5,*,5,*">
      <Border Grid.Column="0" BorderBrush="#ddd" BorderThickness="0,0,1,0">
        <Grid RowDefinitions="Auto,*">
          <Border Background="#f7f7f7" Padding="8" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <TextBlock Text="XAML" FontWeight="Bold" />
          </Border>
          <Border Grid.Row="1" Margin="8" BorderBrush="#e0e0e0" BorderThickness="1">
            <avaloniaEdit:TextEditor x:Name="XamlEditor"
                           ShowLineNumbers="True"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           HorizontalScrollBarVisibility="Auto"
                           VerticalScrollBarVisibility="Auto"
                           FontFamily="Consolas, Courier New, monospace"
                           Foreground="#202020"
                           Background="#ffffff"
                           Padding="8"
                           MinHeight="200" />
          </Border>
        </Grid>
      </Border>

      <GridSplitter Grid.Column="1" Width="5" Background="#ddd" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" />

      <Border Grid.Column="2" Background="#ffffff">
        <Grid RowDefinitions="Auto,*">
          <Border Background="#f7f7f7" Padding="8" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <TextBlock Text="Preview" FontWeight="Bold" />
          </Border>
          <Border Grid.Row="1" Margin="12" Background="#f0f0f0" Padding="12" x:Name="PreviewHost" />
        </Grid>
      </Border>

      <GridSplitter Grid.Column="3" Width="5" Background="#ddd" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" />

      <Border Grid.Column="4" BorderBrush="#ddd" BorderThickness="1,0,0,0">
        <Grid RowDefinitions="Auto,*">
          <Border Background="#f7f7f7" Padding="8" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <TextBlock Text="JavaScript" FontWeight="Bold" />
          </Border>
          <Border Grid.Row="1" Margin="8" BorderBrush="#e0e0e0" BorderThickness="1">
            <avaloniaEdit:TextEditor x:Name="ScriptEditor"
                           ShowLineNumbers="True"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           HorizontalScrollBarVisibility="Auto"
                           VerticalScrollBarVisibility="Auto"
                           FontFamily="Consolas, Courier New, monospace"
                           Foreground="#202020"
                           Background="#ffffff"
                           Padding="8"
                           MinHeight="200" />
          </Border>
        </Grid>
      </Border>
    </Grid>
  </Grid>
</Window>
